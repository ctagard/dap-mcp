# Maintainer: Cole Agard <cole@example.com>
# Binary package - downloads pre-built binaries
pkgname=dap-mcp-bin
pkgver=0.1.1
pkgrel=1
pkgdesc="MCP server exposing Debug Adapter Protocol to AI agents (prebuilt binary)"
arch=('x86_64' 'aarch64')
url="https://github.com/ctagard/dap-mcp"
license=('MIT')
depends=('glibc')
optdepends=(
    'delve: Go debugging support'
    'python-debugpy: Python debugging support'
    'nodejs: JavaScript/TypeScript debugging support'
)
provides=('dap-mcp')
conflicts=('dap-mcp')
source_x86_64=("https://github.com/ctagard/dap-mcp/releases/download/v${pkgver}/dap-mcp_${pkgver}_linux_amd64.tar.gz")
source_aarch64=("https://github.com/ctagard/dap-mcp/releases/download/v${pkgver}/dap-mcp_${pkgver}_linux_arm64.tar.gz")
sha256sums_x86_64=('SKIP')
sha256sums_aarch64=('SKIP')

package() {
    install -Dm755 dap-mcp "${pkgdir}/usr/bin/dap-mcp"
    install -Dm644 README.md "${pkgdir}/usr/share/doc/dap-mcp/README.md"
    install -Dm644 config.example.json "${pkgdir}/usr/share/doc/dap-mcp/config.example.json"
}
